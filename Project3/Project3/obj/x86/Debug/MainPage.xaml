<Page
    x:Class="Project3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="1200">

    
    <Grid>
        <Grid>
            <StackPanel>

                <Button x:ConnectionId='2' Margin="10,10,10,10" Content="View Inventory" FontSize="28"                         HorizontalAlignment="Stretch"></Button>
                <Button x:ConnectionId='3' Margin="10,10,10,10" Content="View Shopping Cart" FontSize="28"                    HorizontalAlignment="Stretch"></Button>
                <Button x:ConnectionId='4' Margin="10,10,10,10" Content="Checkout" FontSize="28"                        HorizontalAlignment="Stretch"></Button>
                <Button x:ConnectionId='5' Name="Item1" Margin="10,10,10,10" Content="{Binding Item, Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" FontSize="28"                     HorizontalAlignment="Stretch"></Button>
                <Button x:ConnectionId='6' Name="Item2" Margin="10,10,10,10" Content="Item2" FontSize="28"                     HorizontalAlignment="Stretch"></Button>
                <Button x:ConnectionId='7' Name="Item3" Margin="10,10,10,10" Content="Item3" FontSize="28"                     HorizontalAlignment="Stretch"></Button>
                <Button x:ConnectionId='8' Name="Item4" Margin="10,10,10,10" Content="Item4" FontSize="28"                     HorizontalAlignment="Stretch"></Button>
                <Button x:ConnectionId='9' Name="Item5" Margin="10,10,10,10" Content="Item5" FontSize="28"                     HorizontalAlignment="Stretch"></Button>
                
                <Button x:ConnectionId='10' Margin="10,10,10,10" Content="Next" FontSize="28"                    HorizontalAlignment="Right" RenderTransformOrigin="0.502,0.5"></Button>
                <Button x:ConnectionId='11' Margin="10,10,10,10" Content="Previous" FontSize="28"                        HorizontalAlignment="Right"></Button>
                <Button x:ConnectionId='12' Margin="10,10,10,10" Content="Exit" FontSize="28"                    HorizontalAlignment="Left"></Button>

            </StackPanel>

        </Grid>
    </Grid>
    
</Page>

